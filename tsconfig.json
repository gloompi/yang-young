{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "lib": ["es2017", "dom"],
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "alwaysStrict": true,
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "pretty": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*", "src/declarations.d.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
